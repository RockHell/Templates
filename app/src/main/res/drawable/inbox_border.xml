<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="1.5dp">
        <shape>
            <padding android:bottom="3dp"/>
            <gradient
                android:startColor="@color/colorBlack"
                android:centerColor="@color/colorBlack"
                android:endColor="@color/colorInboxBackground"
                android:angle="270"
                >
            </gradient>
        </shape>
    </item>

    <item android:bottom="3dp">
        <shape>
            <padding android:top="1.5dp"/>
            <gradient
                android:startColor="@color/colorBlack"
                android:centerColor="@color/colorBlack"
                android:endColor="@color/colorInboxBackground"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="3dp" android:top="1.5dp"/>
        </shape>
    </item>

</layer-list>